<p id="notice"><%= notice %></p>

<h1>Project Boards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_boards.each do |project_board| %>
      <tr>
        <td><%= project_board.title %></td>
        <td><%= link_to 'Show', project_board %></td>
        <td><%= link_to 'Edit', edit_project_board_path(project_board) %></td>
        <td><%= link_to 'Destroy', project_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project Board', new_project_board_path %>
